{
  "name": "essential-eth",
  "description": "Ultralight JS library for Ethereum utilities",
  "version": "0.0.2",
  "license": "MIT",
  "sideEffects": false,
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "test": "npm-run-all --parallel jest tsc",
    "tsc": "npm-run-all --parallel tsc:esm tsc:cjs",
    "tsc:esm": "tsc -p tsconfig.json",
    "tsc:cjs": "tsc -p tsconfig-cjs.json",
    "build": "rm -rf lib",
    "prepublishOnly": "npm run build && npm-run-all build:website build:website:new-version",
    "jest": "jest",
    "build:website": "typedoc --options typedoc/options.js",
    "build:website:new-version": "typedoc --options typedoc/options-new-version.json"
  },
  "devDependencies": {
    "@types/big.js": "^6.1.2",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "ethers": "^5.4.6",
    "husky": "^4.3.0",
    "jest": "^27.1.1",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "prettier-plugin-organize-imports": "^2.3.3",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typedoc": "^0.22.2",
    "typescript": "^4.4.3",
    "web3": "^1.5.2"
  },
  "dependencies": {
    "big.js": "^6.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm-run-all --parallel test build:website"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,md,json,html,yml,yaml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2
  }
}
