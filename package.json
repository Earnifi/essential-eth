{
  "name": "essential-eth",
  "description": "Ultralight JS library for Ethereum utilities",
  "version": "0.4.11",
  "license": "MIT",
  "sideEffects": false,
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "files": [
    "lib/"
  ],
  "bugs": {
    "url": "https://github.com/dawsbot/essential-eth/issues"
  },
  "repository": "https://github.com/dawsbot/essential-eth.git",
  "author": "@dawsbot",
  "scripts": {
    "test": "npm-run-all --parallel jest compile lint",
    "test:all-node-versions": "npx trevor",
    "lint": "eslint .",
    "compile": "npm-run-all --parallel tsc:esm tsc:cjs",
    "tsc:esm": "tsc -p tsconfig.json",
    "tsc:cjs": "tsc -p tsconfig-cjs.json",
    "build": "rm -rf lib && npm run compile",
    "prepublishOnly": "npm run build",
    "jest": "jest",
    "build:chains-info": "npx ts-node scripts/fetch-chains-info.ts # used in getNetwork()",
    "pre-commit": "sh scripts/pre-commit.sh"
  },
  "devDependencies": {
    "@ethersproject/keccak256": "^5.4.0",
    "@types/body-parser": "^1.19.1",
    "@types/eslint": "^8.4.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jest-dev-server": "^5.0.0",
    "@types/node": "^16.10.1",
    "@types/prettier": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "body-parser": "^1.19.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.13.0",
    "eslint-plugin-jest": "^26.1.4",
    "ethers": "^5.6.2",
    "express": "^4.17.1",
    "husky": "^4.3.0",
    "jest": "^27.5.1",
    "jest-dev-server": "^6.0.3",
    "just-omit": "^2.0.1",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.2.1",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.3",
    "web3": "^1.7.3"
  },
  "dependencies": {
    "@types/big.js": "^6.1.3",
    "big.js": "^6.1.1",
    "isomorphic-unfetch": "^3.1.0",
    "sha3": "^2.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && run-p pre-commit test build:chains-info"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,md,json,html,yml,yaml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "singleQuote": true
  }
}
